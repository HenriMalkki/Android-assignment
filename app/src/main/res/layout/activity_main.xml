<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.s300732.harjoitustyo.MainActivity">

    <Button
        android:text="Go to user management (login, register etc.)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goto_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="71dp"
        android:id="@+id/@android:id/list"
        android:layout_below="@+id/nayta_button"
        android:layout_alignParentStart="true" />

    <Button
        android:text="New task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goto_button"
        android:layout_alignParentStart="true"
        android:id="@+id/newtask_button"
        android:layout_toStartOf="@+id/signedintext" />

    <Button
        android:text="Delete a task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deletetask_button"
        android:layout_below="@+id/goto_button"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Signed in: No"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signedintext"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/deletetask_button"
        android:layout_alignBottom="@+id/deletetask_button"
        android:layout_toStartOf="@+id/deletetask_button" />

    <Button
        android:text="Show tasks (if you have signed in)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nayta_button"
        android:layout_below="@+id/newtask_button"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
